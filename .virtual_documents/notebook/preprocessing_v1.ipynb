def name_to_country(name : str) -> str:
    if len(name) >= 13:
        if name.split("<")[0] in ["United States", "Utah", "New York", "Illinois"]:
            return "United States"
        if name.split(",")[0] in ["United States"]:
            return "United States"
    return name


