def detect_language_fasttext(text): #utils
    try:
        if pd.isnull(text) or text.strip() == "":
            return "unknown"
        prediction = model.predict(text.strip())
        return prediction[0][0].replace("__label__", "") 
    except Exception as e:
        return "unknown"





